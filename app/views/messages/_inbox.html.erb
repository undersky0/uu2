<h2>Your Inbox</h2>
<% if @messages.size == 0 %>
No messages in your Inbox
<% else %>
                <%= form_tag delete_multiple_user_messages_path, :method=>:post do %>
                        <table  class="table table-bordered">
                                <tr>
                                        <th>Delete?</th>
                                        <th>Sent</th>
                                        <th>Sender</th>
                                        <th>Sent</th>
                                </tr>
                                        <% for message in @messages %>
                                                <tr>
                                                        <td><%= check_box_tag "delete[]", message.id %></td>
                                                        <td>
                                                                <% if message.read? %>
                                                                  <%= link_to h(message.body), user_message_path(@user, message) %>
                                                                <% else %>
                                                                  <%= link_to "#{h(message.body)} (unread)", user_message_path(@user, message) %>
                                                                <% end %>
                                                        </td>
                                                        <td><%= "#{message.sender.full_name}" %></td>
                                                <td><%=h message.created_at.to_s(:long) %></td>
                                                </tr>
                        <% end %>
                        </table>
                <%= submit_tag "Delete selected" %> |
                <% end %>
<%= link_to "Compose New Message", new_user_message_path(@user)%> | 
<%= link_to "View Sent Messages", user_messages_path(current_user, :mailbox => :sent)%>
<% end %>